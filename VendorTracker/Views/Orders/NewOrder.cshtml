@using VendorTracker.Models;
<html>

   <div class="jumbotron">
      <h1>New Order</h1>
   </div>
   <body>
      <div class="container">
         <br>
         <form action="/Vendors/@Model.ID/" style="width: 200px;" method="POST">
            <div class="animated">
               <div class="propertylabel" style="width: 250px;">Adding an Order to @Model.Name</div>
               <div class='property' style="width: 250px;">
                  <label for="name">Name:</label>
                  <input type="text" id="name" placeholder="name" name="name"><br>
                  <label for="OrderDesc">Description:</label>
                  <input type="text" placeholder="Description" name="OrderDesc"><br>
                  <label for="individualPrice">Price:</label>
                  <input type="number" step=".01" min="0.00" placeholder="price" name="individualPrice"><br>
                  <label for="quantity">Quantity:</label>
                  <input type="number" placeholder="quantity" min="0"  name="quantity">
                  <button type="submit">Submit</button>
               </div>
            </div>
         </form>
      </div>
   </body>
</html>