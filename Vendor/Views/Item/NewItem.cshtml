@using VendorTracker.Models;
<html>
        <head>
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
<link rel="stylesheet" href="~/css/Master.css" type="text/css">
</head>
<div class="jumbotron"> <h1>New Item</h1> 
</div>

<div class="container">

    <br>
    <form action="/Vendor/@Model.ID/" method="POST">
    <div class="animated">

    <div class="propertylabel">Adding an Item to @Model.Name</div>
        <div class='property'>

        <label for="name">Name:</label>
        <input type="text" id="name" placeholder="name" name="name"><br>
        <label for="itemDesc">Description:</label>
        <input type="text" placeholder="Description" name="itemDesc"><br>
        <label for="individualPrice">Price:</label>
        <input type="number" step=".01" min="0.00" placeholder="price" name="individualPrice"><br>
        <label for="quantity">Quantity:</label>
        <input type="number" placeholder="quantity" min="0"  name="quantity">
        <button type="submit">Submit</button>
        </div>
    </div>
    </form>
</div>

</html>